# BMMS Pilot Staging Environment Configuration
# Copy this file to .env and update with actual values

# ============================================================================
# CRITICAL: Security Settings
# ============================================================================

# Generate a new secret key for staging (use: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
SECRET_KEY=your-secret-key-here-min-50-chars

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=staging.bmms.gov.ph,localhost,127.0.0.1

# CSRF trusted origins (comma-separated)
CSRF_TRUSTED_ORIGINS=https://staging.bmms.gov.ph,http://localhost:8000

# CORS allowed origins (comma-separated, optional)
CORS_ALLOWED_ORIGINS=https://staging.bmms.gov.ph

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL connection string for pilot database
DATABASE_URL=postgresql://bmms_pilot:your-password-here@localhost:5432/bmms_pilot

# Database connection pool settings
DB_CONN_MAX_AGE=600
DB_CONN_HEALTH_CHECKS=true

# ============================================================================
# Redis & Celery Configuration
# ============================================================================

# Redis URL for caching and Celery broker
REDIS_URL=redis://localhost:6379/1

# Celery broker URL (usually same as Redis)
CELERY_BROKER_URL=redis://localhost:6379/2

# Celery result backend (optional, defaults to broker URL)
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Celery worker configuration
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000
CELERY_WORKER_PREFETCH_MULTIPLIER=4
CELERY_TASK_TIME_LIMIT=300
CELERY_TASK_SOFT_TIME_LIMIT=240
CELERY_TASK_ACKS_LATE=true

# ============================================================================
# Email Configuration
# ============================================================================

# Email backend (use smtp.EmailBackend for production, console.EmailBackend for local testing)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP server settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here

# From email address
DEFAULT_FROM_EMAIL=BMMS Pilot Support <support@staging.bmms.gov.ph>

# Pilot support email
PILOT_SUPPORT_EMAIL=support@staging.bmms.gov.ph

# ============================================================================
# Application Settings
# ============================================================================

# Base URL for the application (used in emails and redirects)
BASE_URL=https://staging.bmms.gov.ph

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Django settings module
DJANGO_SETTINGS_MODULE=obc_management.settings.staging

# ============================================================================
# Security Settings
# ============================================================================

# SSL/HTTPS settings
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_HSTS_PRELOAD=true

# ============================================================================
# Feature Flags
# ============================================================================

# Enable pilot mode features
FEATURE_PILOT_MODE=true

# Allow pilot signups (set to false after initial onboarding)
FEATURE_ALLOW_PILOT_SIGNUPS=false

# ============================================================================
# Pilot Configuration
# ============================================================================

# Pilot organization codes (comma-separated)
PILOT_ORGANIZATION_CODES=MOH,MOLE,MAFAR

# Default password length for generated passwords
PILOT_DEFAULT_PASSWORD_LENGTH=16

# ============================================================================
# Backup Configuration
# ============================================================================

# Backup directory path
BACKUP_DIRECTORY=/var/backups/bmms/pilot

# Backup retention in days
BACKUP_RETENTION_DAYS=30

# ============================================================================
# Optional: External Services
# ============================================================================

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# New Relic license key (optional)
# NEW_RELIC_LICENSE_KEY=your-license-key

# AWS S3 for media storage (optional)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=bmms-pilot-media
# AWS_S3_REGION_NAME=ap-southeast-1
