{# Data Table Card Component - Bangsamoro Color Scheme #}
<div class="bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden" data-table-card>
    {# Header with Bangsamoro gradient #}
    <div class="px-6 py-4 flex items-center gap-3 text-white {{ accent_class }}">
        {% if icon_class %}
        <span class="inline-flex h-10 w-10 items-center justify-center rounded-xl bg-white/20 text-2xl">
            <i class="{{ icon_class }}" aria-hidden="true"></i>
        </span>
        {% endif %}
        <div>
            <h2 class="text-lg font-semibold">{{ title }}</h2>
        </div>
    </div>

    {# Table Content #}
    <div class="divide-y divide-gray-200">
        {# Table Headers #}
        <div class="hidden md:flex gap-4 px-6 py-3 text-xs font-semibold uppercase tracking-wide text-gray-500">
            {% for header in headers %}
            <div class="{{ header.width|default('') }} {{ header.class|default('flex items-center') }}">
                {{ header.label }}
            </div>
            {% endfor %}
            {% if show_actions %}
            <div class="{{ actions_width }} text-right">Actions</div>
            {% endif %}
        </div>

        {# Table Rows - Will be populated dynamically via context #}
        <div id="{{ title|safe_id }}-rows" class="table-rows">
            {# Example row structure - Replace with actual Django loop in usage #}
            <div class="px-6 py-8 text-center text-sm text-gray-500">
                {{ empty_message }}
            </div>
        </div>
    </div>
</div>

