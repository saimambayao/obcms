{# Form Component - Bangsamoro Color Scheme #}
<form id="{{ form_id }}" 
      method="{{ form_method }}"
      {% if form_action %}action="{{ form_action }}"{% endif %}
      class="space-y-6">
    {% csrf_token %}
    
    {# Form Title #}
    <div class="border-b border-gray-200 pb-4">
        <h3 class="text-lg font-semibold text-gray-900">{{ title }}</h3>
    </div>

    {# Form Fields #}
    <div class="space-y-4">
        {% for field in fields %}
        <div class="form-field">
            <label for="{{ form_id }}-{{ field.name }}" 
                   class="block text-sm font-medium text-gray-700 mb-1">
                {{ field.label }}
                {% if field.required %}
                <span class="text-rose-600">*</span>
                {% endif %}
            </label>
            
            {% if field.type == 'text' or field.type == 'email' or field.type == 'tel' or field.type == 'url' %}
            <input type="{{ field.type }}"
                   id="{{ form_id }}-{{ field.name }}"
                   name="{{ field.name }}"
                   {% if field.required %}required{% endif %}
                   {% if field.placeholder %}placeholder="{{ field.placeholder }}"{% endif %}
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-{{ submit_color }}-500 focus:border-{{ submit_color }}-600 transition-colors">
            
            {% elif field.type == 'textarea' %}
            <textarea id="{{ form_id }}-{{ field.name }}"
                      name="{{ field.name }}"
                      rows="4"
                      {% if field.required %}required{% endif %}
                      {% if field.placeholder %}placeholder="{{ field.placeholder }}"{% endif %}
                      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-{{ submit_color }}-500 focus:border-{{ submit_color }}-600 transition-colors"></textarea>
            
            {% elif field.type == 'select' %}
            <select id="{{ form_id }}-{{ field.name }}"
                    name="{{ field.name }}"
                    {% if field.required %}required{% endif %}
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-{{ submit_color }}-500 focus:border-{{ submit_color }}-600 transition-colors">
                <option value="">Select {{ field.label }}</option>
                {# Options will be populated via Django context #}
            </select>
            
            {% elif field.type == 'checkbox' %}
            <div class="flex items-center gap-2">
                <input type="checkbox"
                       id="{{ form_id }}-{{ field.name }}"
                       name="{{ field.name }}"
                       class="h-4 w-4 text-{{ submit_color }}-600 focus:ring-{{ submit_color }}-500 border-gray-300 rounded">
                <label for="{{ form_id }}-{{ field.name }}" class="text-sm text-gray-700">
                    {{ field.help_text|default(field.label) }}
                </label>
            </div>
            
            {% elif field.type == 'date' %}
            <input type="date"
                   id="{{ form_id }}-{{ field.name }}"
                   name="{{ field.name }}"
                   {% if field.required %}required{% endif %}
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-{{ submit_color }}-500 focus:border-{{ submit_color }}-600 transition-colors">
            {% endif %}
            
            {% if field.help_text and field.type != 'checkbox' %}
            <p class="mt-1 text-sm text-gray-500">{{ field.help_text }}</p>
            {% endif %}
        </div>
        {% endfor %}
    </div>

    {# Form Actions #}
    <div class="flex items-center justify-end gap-3 pt-4 border-t border-gray-200">
        {% if show_cancel %}
        <a href="{{ cancel_url }}"
           class="px-6 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors">
            Cancel
        </a>
        {% endif %}
        
        <button type="submit"
                class="px-6 py-2 text-sm font-medium text-white bg-{{ submit_color }}-600 border border-transparent rounded-lg hover:bg-{{ submit_color }}-700 focus:outline-none focus:ring-2 focus:ring-{{ submit_color }}-500 focus:ring-offset-2 transition-colors">
            {{ submit_text }}
        </button>
    </div>
</form>
