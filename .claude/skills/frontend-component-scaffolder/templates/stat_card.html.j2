{# Stat Card Component - Bangsamoro Color Scheme #}
<div class="bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden hover:shadow-xl transition-shadow">
    {# Card Header with gradient #}
    <div class="px-6 py-4 {{ accent_classes.header_bg }}">
        <div class="flex items-center gap-3">
            {% if icon_class %}
            <div class="inline-flex h-12 w-12 items-center justify-center rounded-xl bg-white/20 text-white">
                <i class="{{ icon_class }} text-2xl" aria-hidden="true"></i>
            </div>
            {% endif %}
            <div class="flex-1">
                <p class="text-sm font-medium text-white/90">{{ title }}</p>
                <p class="text-3xl font-bold text-white mt-1">{{ value }}</p>
            </div>
        </div>
    </div>

    {# Card Body #}
    <div class="px-6 py-4">
        <div class="flex items-center justify-between">
            {% if change %}
            <div class="flex items-center gap-2">
                {% if trend == 'up' %}
                <span class="inline-flex items-center gap-1 text-sm font-semibold text-emerald-700">
                    <i class="fas fa-arrow-up" aria-hidden="true"></i>
                    {{ change }}
                </span>
                {% elif trend == 'down' %}
                <span class="inline-flex items-center gap-1 text-sm font-semibold text-rose-700">
                    <i class="fas fa-arrow-down" aria-hidden="true"></i>
                    {{ change }}
                </span>
                {% else %}
                <span class="inline-flex items-center gap-1 text-sm font-semibold text-gray-700">
                    <i class="fas fa-minus" aria-hidden="true"></i>
                    {{ change }}
                </span>
                {% endif %}
                {% if subtitle %}
                <span class="text-sm text-gray-500">{{ subtitle }}</span>
                {% endif %}
            </div>
            {% endif %}

            {% if link_url %}
            <a href="{{ link_url }}"
               class="text-sm font-medium {{ accent_classes.text_secondary }} hover:{{ accent_classes.text_primary }} transition-colors">
                {{ link_text }} <i class="fas fa-arrow-right ml-1" aria-hidden="true"></i>
            </a>
            {% endif %}
        </div>
    </div>
</div>
